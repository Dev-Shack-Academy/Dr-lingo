# Environment Configuration Example
# Copy this file to .env.prod for local development
# For production deployment, use GitHub Secrets/Variables instead


# Django Settings


SECRET_KEY=django-insecure-example-key-generate-a-real-one-for-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,example.com,www.example.com,api.example.com
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:80,https://example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=http://localhost,http://localhost:80,https://example.com,https://www.example.com



# Database Configuration (PostgreSQL)


POSTGRES_DB=dr-lingo_db
POSTGRES_USER=dr-lingo_user
POSTGRES_PASSWORD=secure-database-password-here

# For docker-compose: use service name 'postgres' or 'db'
# For local development: use 'localhost:5435'
DATABASE_URL=postgresql://dr-lingo_user:secure-database-password-here@postgres:5432/dr-lingo_db



# Redis Configuration


REDIS_PASSWORD=secure-redis-password-here

# For docker-compose: use service name 'redis'
# For local development: use 'localhost:6380'
REDIS_URL=redis://:secure-redis-password-here@redis:6379/1
REDIS_CHANNELS_URL=redis://:secure-redis-password-here@redis:6379/2



# Celery Task Queue


CELERY_BROKER_URL=redis://:secure-redis-password-here@redis:6379/0
CELERY_RESULT_BACKEND=redis://:secure-redis-password-here@redis:6379/0



# RabbitMQ Event Bus (Local Development)


RABBITMQ_DEFAULT_USER=dr-lingo
RABBITMQ_DEFAULT_PASS=secure-rabbitmq-password-here
RABBITMQ_DEFAULT_VHOST=dr-lingo

# For docker-compose: use service name 'rabbitmq'
RABBITMQ_URL=amqp://dr-lingo:secure-rabbitmq-password-here@rabbitmq:5672/dr-lingo
RABBITMQ_EXCHANGE=medical_translation_events



# Event System Configuration (Local vs Cloud)


# Use Pub/Sub (Cloud Run) or RabbitMQ (Local Docker)
# Set to False for local development, True for GCP Cloud Run
USE_PUBSUB=False

# Pub/Sub settings (only used when USE_PUBSUB=True in Cloud Run)
# Leave commented out for local development
# PUBSUB_PROJECT_ID=your-gcp-project-id
# PUBSUB_TOPIC=dr-lingo-events
# PUBSUB_SUBSCRIPTION=dr-lingo-events-sub



# Cloud Storage Configuration (Local vs Cloud)


# Use Google Cloud Storage (Cloud Run) or local filesystem (Docker)
# Set to False for local development, True for GCP Cloud Run
USE_GCS=False

# GCS bucket name (only used when USE_GCS=True in Cloud Run)
# Leave commented out for local development
# GCS_BUCKET_NAME=dr-lingo-media-your-project-id



# AI Provider Configuration


# AI Provider: "gemini" (cloud) or "ollama" (local)
# For local testing, use "gemini" if you have an API key, or "ollama" after pulling models
AI_PROVIDER=ollama

# Ollama Settings (Local AI)
# For docker-compose: use service name 'ollama'
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_TRANSLATION_MODEL=granite3.3:8b
OLLAMA_COMPLETION_MODEL=granite3.3:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:v1.5

# Gemini AI (Cloud - Alternative to Ollama)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here



# Whisper Speech-to-Text


# For docker-compose: use service name 'whisper'
WHISPER_API_URL=http://whisper:9000



# Hugging Face Integration


# Hugging Face Token for dataset imports (optional)
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your-huggingface-token-here



# Frontend Build Arguments (Vite)


# For local development (docker-compose)
VITE_API_BASE_URL=http://localhost/api
VITE_WS_URL=ws://localhost

# For production deployment
# VITE_API_BASE_URL=https://example.com/api
# VITE_WS_URL=wss://example.com



# Domain Configuration


# Primary domain for the application
DOMAIN=localhost



# Authentication Settings


# OTP Email Sender
OTP_EMAIL_SENDER=noreply@localhost



# ============================================
# IMPORTANT NOTES
# ============================================
#
# LOCAL DEVELOPMENT (docker-compose):
# - USE_PUBSUB=False (uses RabbitMQ)
# - USE_GCS=False (uses local filesystem in services/media/)
# - Service names: postgres, redis, rabbitmq, ollama, whisper
# - Files persist in Docker volumes
#
# CLOUD RUN PRODUCTION (GitHub Actions):
# - USE_PUBSUB=True (uses Google Pub/Sub)
# - USE_GCS=True (uses Google Cloud Storage)
# - Managed services: Cloud SQL, Memorystore, Pub/Sub, GCS
# - Files persist in GCS bucket
# - Set via GitHub Secrets/Variables, not this file!
#
# The same codebase works in both environments by checking
# USE_PUBSUB and USE_GCS environment variables.
# ============================================
