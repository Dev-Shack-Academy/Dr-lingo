# Production Environment Configuration Example
# This file shows the structure of .env.prod with example values
# Copy .env.prod and fill in actual production values


# Django Settings


SECRET_KEY=django-insecure-example-key-generate-a-real-one-for-production
DEBUG=False
ALLOWED_HOSTS=example.com,www.example.com,api.example.com
CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com
CSRF_TRUSTED_ORIGINS=https://example.com,https://www.example.com



# Database Configuration (PostgreSQL)


POSTGRES_DB=dr-lingo_db
POSTGRES_USER=dr-lingo_user
POSTGRES_PASSWORD=secure-database-password-here
DATABASE_URL=postgresql://dr-lingo_user:secure-database-password-here@db:5432/dr-lingo_db



# Redis Configuration


REDIS_PASSWORD=secure-redis-password-here
REDIS_URL=redis://:secure-redis-password-here@redis:6379/1
REDIS_CHANNELS_URL=redis://:secure-redis-password-here@redis:6379/2



# Celery Task Queue


CELERY_BROKER_URL=redis://:secure-redis-password-here@redis:6379/0
CELERY_RESULT_BACKEND=redis://:secure-redis-password-here@redis:6379/0



# RabbitMQ Event Bus


RABBITMQ_DEFAULT_USER=dr-lingo
RABBITMQ_DEFAULT_PASS=secure-rabbitmq-password-here
RABBITMQ_DEFAULT_VHOST=dr-lingo
RABBITMQ_URL=amqp://dr-lingo:secure-rabbitmq-password-here@rabbitmq:5672/dr-lingo



# AI Provider Configuration


AI_PROVIDER=ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_TRANSLATION_MODEL=granite3.3:8b
OLLAMA_COMPLETION_MODEL=granite3.3:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:v1.5
GEMINI_API_KEY=your-gemini-api-key-here



# Whisper Speech-to-Text


WHISPER_API_URL=http://whisper:9000



# Hugging Face Integration


HF_TOKEN=your-huggingface-token-here



# Frontend Build Arguments (Vite)


VITE_API_BASE_URL=https://example.com/api
VITE_WS_URL=wss://example.com



# Domain Configuration


DOMAIN=example.com



# Authentication Settings


OTP_EMAIL_SENDER=noreply@example.com
