
# LOCAL DEVELOPMENT ENVIRONMENT (No Docker)

# Use this when running with: poetry run python manage.py runserver
# Services (PostgreSQL, Redis, RabbitMQ, Ollama) run on localhost with exposed ports
# Copy to: .env (root) and services/.env


# Django Settings
SECRET_KEY=django-insecure-your-dev-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://localhost:3000


# Database Configuration (PostgreSQL)
# Running via: docker run -p 5435:5432 postgres
POSTGRES_DB=dr-lingo_db
POSTGRES_USER=dr-lingo_user
POSTGRES_PASSWORD=your-local-password
DATABASE_URL=postgresql://dr-lingo_user:your-local-password@localhost:5435/dr-lingo_db


# Redis Configuration
# Running via: docker run -p 6380:6379 redis
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@localhost:6380/1
REDIS_CHANNELS_URL=redis://:your-redis-password@localhost:6380/2


# Celery Task Queue
CELERY_BROKER_URL=redis://:your-redis-password@localhost:6380/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@localhost:6380/0


# RabbitMQ Event Bus
# Running via: docker run -p 5673:5672 -p 15673:15672 rabbitmq:management
RABBITMQ_DEFAULT_USER=dr-lingo
RABBITMQ_DEFAULT_PASS=your-rabbitmq-password
RABBITMQ_DEFAULT_VHOST=dr-lingo
RABBITMQ_URL=amqp://dr-lingo:your-rabbitmq-password@localhost:5673/dr-lingo
RABBITMQ_EXCHANGE=medical_translation_events


# Event System (Local = RabbitMQ)
USE_PUBSUB=False


# Cloud Storage (Local = filesystem)
USE_GCS=False


# AI Provider Configuration
# Ollama running locally: ollama serve (default port 11434)
AI_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TRANSLATION_MODEL=granite3.3:8b
OLLAMA_COMPLETION_MODEL=granite3.3:8b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest

# Gemini AI (Alternative - get key from: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key-here


# Whisper Speech-to-Text
# Running via: docker run -p 9000:9000 onerahmet/openai-whisper-asr-webservice
WHISPER_API_URL=http://localhost:9000


# Hugging Face (Optional)
HF_TOKEN=your-huggingface-token-here


# Frontend (Vite dev server) place in client/.env
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000


# Domain Configuration
DOMAIN=localhost:5173


# Authentication
OTP_EMAIL_SENDER=noreply@localhost



# QUICK START:
# 1. Copy this to .env and services/.env
# 2. Start required services with Docker:
#    docker run -d -p 5435:5432 -e POSTGRES_PASSWORD=your-local-password postgres
#    docker run -d -p 6380:6379 redis
# 3. Run Ollama: ollama serve && ollama pull granite3.3:8b
# 4. Start Django: cd services && poetry run python manage.py runserver
# 5. Start Frontend: cd client && yarn dev
